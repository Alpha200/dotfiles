! urxvt
URxvt*geometry: 107x53

URxvt.letterSpace: 0
URxvt*font: xft:Inconsolata\ for\ Powerline:pixelsize=17:antialias=true,xft:Noto Emoji:pixelsize=9:antialias=false
URxvt*boldFont: xft:Inconsolata\ for\ Powerline:pixelsize=17:antialias=true,xft:Noto Emoji:pixelsize=9:antialias=false
URxvt*.scrollBar: false
URxvt*.saveLines: 5000
URxvt*borderless: true

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

! image preview in ranger does not work when this is set
!URxvt.depth: 32

!urxvt color scheme:

URxvt*background: #1B1B1B
URxvt*foreground: #DEDEDE

URxvt*colorUL: #86a2b0

! black
Urxvt*color0: #181818
Urxvt*color8: #554444
! red
URxvt*color1: #F92671
URxvt*color9: #FF669D
! green
URxvt*color2:#AFF32C
URxvt*color10: #BEED5F
! yellow
URxvt*color3: #FD971F
URxvt*color11: #E6DB74
! blue
URxvt*color4: #34BDEF
URxvt*color12: #66D9EF
! magenta
URxvt*color5: #9E6FFE
URxvt*color13: #DF92F6
! cyan
URxvt*color6: #5E7175
URxvt*color14: #A3BABF
! white
URxvt*color7: #CCCCC6
URxvt*color15: #F8F8F2

URxvt*transparent: true
URxvt*shading: 7

! Variable font-size for presentations
URxvt.perl-ext-common: font-size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal


! patched urxvt needed: (AUR) rxvt-unicode-better-wheel-scrolling

! DISABLED (Not working with Powerline)

!Urxvt*.secondaryScreen: 1
!URxvt*.secondaryScroll: 0
!URxvt*.secondaryWheel: 1
