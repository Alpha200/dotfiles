[alias]
  unstage = reset HEAD
[user]
	name = Daniel Sendzik
	email = d.sendzik@gmail.com
  signingkey = 29FFE0DF
[push]
	default = simple
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[core]
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
  gpgsign = true
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[interactive]
	diffFilter = diff-so-fancy
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
